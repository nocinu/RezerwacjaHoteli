@model IEnumerable<Reservation>

@{
    ViewData["Title"] = "Moje Rezerwacje";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>Moje rezerwacje</h2>
        </div>
        <div class="col-md-4 text-end">
            <a href="/Reservations/Create" class="btn btn-primary">Nowa rezerwacja</a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Brak rezerwacji. <a href="/Reservations/Create">Utwórz nową rezerwację</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Pokój</th>
                        <th>Data zaznaczenia</th>
                        <th>Data wyjazdu</th>
                        <th>Gości</th>
                        <th>Cena (PLN)</th>
                        <th>Status</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model)
                    {
                        <tr>
                            <td>@reservation.Id</td>
                            <td>@reservation.Room?.RoomNumber (@reservation.Room?.RoomType)</td>
                            <td>@reservation.CheckInDate.ToString("yyyy-MM-dd")</td>
                            <td>@reservation.CheckOutDate.ToString("yyyy-MM-dd")</td>
                            <td>@reservation.NumberOfGuests</td>
                            <td>@reservation.TotalPrice.ToString("F2")</td>
                            <td>
                                @switch (reservation.Status)
                                {
                                    case "Pending":
                                        <span class="badge bg-warning text-dark">Oczekująca</span>
                                        break;
                                    case "Confirmed":
                                        <span class="badge bg-success">Potwierdzona</span>
                                        break;
                                    case "Cancelled":
                                        <span class="badge bg-danger">Anulowana</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@reservation.Status</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (reservation.Status != "Cancelled")
                                {
                                    <form method="post" action="/Reservations/Cancel/@reservation.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm"
                                                onclick="return confirm('Na pewno chcesz anulować rezerwację?')">
                                            Anuluj
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
