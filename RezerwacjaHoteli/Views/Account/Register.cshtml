@model User

@{
    ViewData["Title"] = "Rejestracja";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Rejestracja nowego użytkownika</h2>
        <hr />

        <form method="post">
            <div class="form-group mb-3">
                <label for="FullName" class="form-label">Imię i Nazwisko</label>
                <input type="text" class="form-control" id="FullName" name="FullName" required minlength="3">
                <span class="text-danger">@Html.ValidationMessageFor(m => m.FullName)</span>
            </div>

            <div class="form-group mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" required>
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
            </div>

            <div class="form-group mb-3">
                <label for="PhoneNumber" class="form-label">Numer telefonu (opcjonalnie)</label>
                <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber">
            </div>

            <div class="form-group mb-3">
                <label for="PasswordHash" class="form-label">Hasło</label>
                <input type="password" class="form-control" id="PasswordHash" name="PasswordHash" required minlength="6">
                <small class="form-text text-muted">Minimum 6 znaków</small>
                <span class="text-danger">@Html.ValidationMessageFor(m => m.PasswordHash)</span>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Zarejestruj się</button>
                <a href="/Account/Login" class="btn btn-secondary">Mam już konto</a>
            </div>
        </form>
    </div>
</div>
